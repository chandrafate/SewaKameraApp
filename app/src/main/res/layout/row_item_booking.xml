<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white_background">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_kategori"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="5dp"
            android:outlineSpotShadowColor="@color/white">

            <ImageView
                android:id="@+id/image_item_booking"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/light_blue"
                android:scaleType="centerCrop"
               android:src="@drawable/ic_keranjang2" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_jumlah_item_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cardview"
            android:text="2 Items"
            android:textColor="@color/blue_background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_harga_item_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jumlah_item_booking"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="10dp"
            android:text="Rp. 50000"
            android:textAlignment="textEnd"
            android:textColor="@color/pink_btn"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tgl_in_item_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jumlah_item_booking"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/cardview"
            android:text="2 Nov"
            android:textColor="@color/blue_background"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tgl_in_item_booking"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/cardview"
            android:rotation="90"
            app:srcCompat="@drawable/ic_arrow_rightpx" />

        <TextView
            android:id="@+id/tv_tgl_out_item_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView7"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/cardview"
            android:text="4 Nov"
            android:textColor="@color/blue_background"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_status_item_booking"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_pending_yellow" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>