<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_tgl">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Konfirmasi Pembayaran"
        android:textColor="@color/blue_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="1. Pilih Pembayaran yang digunakan"
        android:textAlignment="viewStart"
        android:textColor="@color/blue_background"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_rek"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="2. Upload Bukti Pembayaran"
        android:textColor="@color/blue_background"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView32"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_upload"
        android:drawableStart="@drawable/ic_media"
        android:padding="5dp"
        android:text="Browse"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_transfer"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_secondary"
        android:text="Kirim"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/textView11"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_ovo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ovo_selected" />

        <ImageView
            android:id="@+id/iv_dana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/dana_unselected" />

        <ImageView
            android:id="@+id/iv_cod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/cod_unselected" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Keterangan :"
        android:textColor="@color/blue_background" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView34"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerInParent="true"
        android:text="1. Silahkan transfer sesuai total booking anda \n2. Harap mengirim foto / screenshot bukti pembayaran untuk mempercepat proses verifikasi\n3. Transfer sesuai nomor tujuan OVO di bawah ini :"
        android:textColor="@color/blue_background" />

    <TextView
        android:id="@+id/tv_no_rek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView35"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="081 2345 6789"
        android:textColor="@color/pink_btn"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_transfer"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/btn_chose"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/input_field"
        android:drawableStart="@drawable/ic_local_atm"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Masukan Total Transfer"
        android:inputType="textPersonName" />


</RelativeLayout>